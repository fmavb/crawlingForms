<script type="text/javascript">    //<![CDATA[
    $(function () {

        var idDay = '#ctl00_body_content-1285635_contactinfogroup-1285651_dateofbirth-1285647_DAY';
        var idMonth = '#ctl00_body_content-1285635_contactinfogroup-1285651_dateofbirth-1285647_MONTH';
        var idYear = '#ctl00_body_content-1285635_contactinfogroup-1285651_dateofbirth-1285647_YEAR'; 

        if ("False" == "True") {
            $(idDay).prop('readonly', true);
            $(idMonth).prop('readonly', true);
            $(idYear).prop('readonly', true);
        }

        $(idDay).setupDobUpdatePI("False", $(idMonth), $(idYear));
        $(idMonth).setupDobUpdatePI("False", $(idDay), $(idYear));
        $(idYear).setupDobUpdatePI("False", $(idDay), $(idMonth));

        var isMandatory = 'True' == 'True';

        if (isMandatory) {

            var maxDay = 31;
            var minYear = 1920;
            var maxYear = 2021;

            var mandatoryErrorMessage = '' || 'Please check your data.' || 'Date is mandatory. Please specify valid date.';
            var invalidDateMessage = 'Please check your data.' || 'Invalid date input. Please check days, month and year ranges.';
            var invalidDayMessage = '' || 'Please check your data.' || 'Invalid day. Please input valid day.';
            var invalidMonthMessage = '' || 'Please check your data.' || 'Invalid month. Please input valid month.';
            var invalidYearMessage = '' || 'Please check your data.' || 'Invalid year. Please input valid year.';

            // Mandatory field mark "*" and add validation rules
            bamboo.userControls.validations.SetDateGroupMandatory($(idDay), $(idMonth), $(idYear), 
                mandatoryErrorMessage, invalidDateMessage, invalidDayMessage, invalidMonthMessage, invalidYearMessage,
                maxDay, minYear, maxYear);
        }

        
        $("#Form").validate().element(this);

        $(idDay).focus(function () {
            removeError();
        });
        $(idMonth).focus(function () {
            removeError();
        });
        $(idYear).focus(function () {
            removeError();
        });

        function removeError() {
            $("#dateofbirth-1285647 .error_message").hide();
            $("#dateofbirth-1285647").removeClass('has-error');
        }
    });
//]]></script>
