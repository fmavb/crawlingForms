<script type="text/javascript">
    function preloadimages(arr) {
        var newimages = [], loadedimages = 0
        var postaction = function () { }
        var arr = (typeof arr != "object") ? [arr] : arr
        function imageloadpost() {
            loadedimages++
            if (loadedimages == arr.length) {
                postaction(newimages) //call postaction and pass in newimages array as parameter
            }
        }
        for (var i = 0; i < arr.length; i++) {
            newimages[i] = new Image()
            newimages[i].src = arr[i]
            newimages[i].onload = function () {
                imageloadpost()
            }
            newimages[i].onerror = function () {
                imageloadpost()
            }
        }
        return { //return blank object with done() method
            done: function (f) {
                postaction = f || postaction //remember user defined callback functions to be called when images load
            }
        }
    };

    //<![CDATA[
    $(function () {
        var causesValidation = 'true' == 'true';
        var hasClickCommand = 'true' == 'true';
        var blockBeforeAction = 'false';

        $('#navigation-1285891').children().bind('click', function (e) {

            var validationResult = causesValidation ? validate(e) : true;
            var clickResult = true;

            
            if (validationResult && hasClickCommand) {
                var clickFunc = function() { $.blockUI({
  message: null
});; };
                clickResult = clickFunc() != false;
            }
            
            return validationResult && clickResult;
        });

        var blockUi = blockBeforeAction === 'true' && typeof (hideUserControl) === 'function';

        if (blockUi)
            preloadimages(['/images/RTB/eSalesRuntime/misc/loading_blockUI.gif']);

        function validate(e) {
            var isValid = $.isValidUserInputs();

            if (isValid && blockUi) {

                hideUserControl(e, '/images/RTB/eSalesRuntime/misc/loading_blockUI.gif', '<h1>Thank you. Your payment is being processed.</h1>', '<h2>This may take up to 2 minutes.</h2><p>In the mean time please don&apos;t refresh the page or click the back button as this may result in multiple payments being taken from your account.</p>');

            }

            return isValid;
        };
    });
    //]]>
</script>
