<script type="text/javascript">
    //<![CDATA[
    $(function() {
        var tbId = '#ctl00_body_content-1285635_contactinfogroup-1285651_emailaddresswithconfirmation-1285650_tb';
        var tbConfirmationId = '#ctl00_body_content-1285635_contactinfogroup-1285651_emailaddresswithconfirmation-1285650_tbConfirmation';

        $.validator.addMethod(
            'ctl00_body_content-1285635_contactinfogroup-1285651_emailaddresswithconfirmation-1285650_validate_both',
            function() {
                if (false) {
                    return true;
                }

                var tbEmpty = CheckIfInputEmpty(tbId);
                var tbConfirmEmpty = CheckIfInputEmpty(tbConfirmationId);

                //Error has not been highlighted and one of the fields is empty
                if ($(tbId).closest('.form_row.error').length === 0 && (tbEmpty || tbConfirmEmpty)) {
                    return true;
                }

                return $(tbId).val() === $(tbConfirmationId).val();
            },
            ''
        );
        
        function CheckIfInputEmpty(element) {
            return $(element).val() === '' || $(element).val() === $(element).attr('placeholder');
        }
        
        ValidateBothFieldsRule(tbId);
        ValidateBothFieldsRule(tbConfirmationId);

        function ValidateBothFieldsRule(element) {
            $(element).rules(
                "add",
                {
                    'ctl00_body_content-1285635_contactinfogroup-1285651_emailaddresswithconfirmation-1285650_validate_both': true,
                    messages: {
                        'ctl00_body_content-1285635_contactinfogroup-1285651_emailaddresswithconfirmation-1285650_validate_both': 'The email address doesn\'t match. Please check and try again.'
                    }
                }
            );
        }

        UserControlInputValidation(tbId);
        UserControlInputValidation(tbConfirmationId);
        
        function UserControlInputValidation(element) {
            bamboo.userControls.validations.inputMask(
                element,
                '^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,})$',
                {
                    inputMask: 'Please enter in the correct format, example: yourname@email.com.',
                    required: 'Is this your correct email address?'
                },
                "True"
            );
        }

        CutInputString(tbId);
        CutInputString(tbConfirmationId);

        function CutInputString(element) {
            $(element).bind(
                'paste', 
                function(event) {
                    var maxLengthValue = 120;
                    var stringValue = event.currentTarget.value;
                    if (stringValue.length > maxLengthValue) {
                        stringValue.substring(stringValue.length - maxLength);
                    }
                }
            );
        }
    });
    //]]>
</script>
